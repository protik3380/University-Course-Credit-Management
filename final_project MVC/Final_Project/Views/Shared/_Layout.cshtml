
<!DOCTYPE html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Visitors Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- bootstrap-css -->  
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->  
    <link href="~/Content/font.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/morris.css" rel="stylesheet" />
    <!-- //font-awesome icons -->
    @RenderSection("css", required: false)

</head>
<body>
<section id="container">
    <!--header start-->
    <header class="header fixed-top clearfix">
        <!--logo start-->
        <div class="brand">
            <a href="" class="logo">
                UCRMS
            </a>
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars"></div>
            </div>
        </div>
        <!--logo end-->
    </header>
    <!--header end-->
    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse">
            <!-- sidebar menu start-->
            <div class="leftside-navigation">
                <ul class="sidebar-menu" id="nav-accordion">


                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-book"></i>
                            <span>Department Setup</span>
                        </a>
                        <ul class="sub">                             
                            <li>@Html.ActionLink("Add New Department","create","Departments")</li>
                            <li>@Html.ActionLink("View All Department","Index","Departments")</li>                                                         
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-th"></i>
                            <span>Course Setup</span>
                        </a>
                        <ul class="sub">                           
                            <li>@Html.ActionLink("Add New Courses", "create", "Courses")</li>
                            <li>@Html.ActionLink("View Course Info", "ViewCourseStatus", "AssignCourse")</li>
                            <li>@Html.ActionLink("Unassign All Courses", "UnassignCourses", "Courses")</li>
                            
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-tasks"></i>
                            <span>Teacher</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Add New Teacher", "create", "Teachers")</li>
                            <li>@Html.ActionLink("Course Assign to Teacher", "Create", "AssignCourse")</li>
                                                      
                        </ul>
                    </li>
                    
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class=" fa fa-bar-chart-o"></i>
                            <span>Student</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Student Registration", "create", "Students")</li>
                            <li>@Html.ActionLink("Enroll Courses to Student", "create", "EnrollCourse")</li>
                            <li>@Html.ActionLink("Save Student Result", "SaveResult", "EnrollCourse")</li>
                            <li>@Html.ActionLink("View Student Result", "ViewResult", "EnrollCourse")</li>
                            
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class=" fa fa-bar-chart-o"></i>
                            <span>Class Room  </span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Allocate Classrooms", "create", "RoomAllocation")</li>
                            <li>@Html.ActionLink("View Class Schedule and Room Allocation Information", "Index", "RoomAllocation")</li>
                            <li>@Html.ActionLink("Unallocate All Classrooms", "UnallocateRoom", "RoomAllocation")</li>

                            
                        </ul>
                    </li>
                   
                    
                </ul>
            </div>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            @RenderBody()
        </section>
        <!-- footer -->
        <div class="footer">
            <div class="wthree-copyright">
                <p>© 2018 BITM. All rights reserved |University Management System | Developed by : Infinite Coders</p>
            </div>
        </div>
        <!-- / footer -->
    </section>
    <!--main content end-->
</section>
<script src="~/Scripts/jquery2.0.3.min.js"></script>
<script src="~/Scripts/raphael-min.js"></script>
<script src="~/Scripts/morris.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/Scripts/scripts.js"></script>
<script src="~/Scripts/jquery.slimscroll.js"></script>
<script src="~/Scripts/jquery.nicescroll.js"></script>
<script src="~/Scripts/jquery.scrollTo.js"></script>
<script>
    $(document).ready(function() {
        //BOX BUTTON SHOW AND CLOSE
        jQuery('.small-graph-box').hover(function() {
                jQuery(this).find('.box-button').fadeIn('fast');
            },
            function() {
                jQuery(this).find('.box-button').fadeOut('fast');
            });
        jQuery('.small-graph-box .box-close').click(function() {
            jQuery(this).closest('.small-graph-box').fadeOut(200);
            return false;
        });
    });
 </script>

@RenderSection("scripts", required: false)
</body>


